# addition.py

#Define variables
num1 = 2
num2 = 9
#Perform addition
sum_result = num1 + num2
#Display the result
print(f"{num1} + {num2} = {sum_result}")
#metric_converter.py

#Define conversion factor
litres_to_gallons = 0.264
#Define the number of liters
litres = 2
#Perform conversion
gallons = litres * litres_to_gallons
#Display the result
print(f"{litres} litrers is {gallons:.3f} gallons")
#triangle_area.py

#Define dimensions
width = 4
height = 6
#Calculate area
area = 0.5 * width * height
#Display the result
print(f"Width is: {width}")
print(f"Height is: {height}")
print(f"Area is: {area}")
#triple.py

#Define the number
num = 8
#Calculate triple value
tripled = num * 3
#Display the result
print(f"{num} x 3 = {tripled}")
